{

  "manifest_version": 2,
  "name": "To Fastdic",
  "description": "A shortcut to access Persian explanations of English words.",
  "version": "1.1",
  "author": "Mohammad Shahnazi",
  "homepage_url": "https://github.com/shahnazi2002/to-fastdic",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "webNavigation"
  ],

  "browser_action": {
    "default_icon": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
    "default_title": "To Fastdic"
  },

  "background": {
    "scripts": [
      "toFastdic.js"
    ]
  }

}
